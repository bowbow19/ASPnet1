@model IEnumerable<_03View.Models.NightMarket>

@{
    ViewBag.Title = "南部地區各大夜市";
}

<h2 class="alert-info">南部地區各大夜市</h2>


<div class="row">
    @foreach (var item in Model)
    {
         <div class="col-md-4">        @*medo斷點的意思 4是指*@
             <div>
                 <img src="~/images/@(item.Id).jpg" class="img-thumbnail" />
                 <div class="caption">
                     <h2>@item.Name</h2>
                     <p>@item.Address</p>
                     <p><a href=" https://www.google.com.tw/maps/place/@item.Address" target="_blank" class="btn btn-primary">查看地圖</a></p>
                 </div>

             </div>
        </div>
    }

</div>


